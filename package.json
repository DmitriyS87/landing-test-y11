{
  "scripts": {
    "start": "eleventy --serve",
    "build": "rm -rf dist && eleventy",
    "test": "npm run editorconfig && npm run html && npm run css && npm run javascript",
    "editorconfig": "editorconfig-checker",
    "html": "w3c-html-validator dist --ignore-config=.validator",
    "css": "stylelint \"src/styles/**/*.css\"",
    "javascript": "eslint eleventy.config.js src/**/*.js",
    "build-ghpages": "npm run build && gh-pages -d dist",
    "deploy": "gh-pages -d dist"
  },
  "engines": {
    "node": "20"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "editorconfig-checker": "^5.1.8",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "gh-pages": "^6.1.1",
    "globals": "^15.9.0",
    "html-minifier-terser": "^7.2.0",
    "lightningcss": "^1.27.0",
    "linkedom": "^0.18.4",
    "pretty-data": "^0.40.0",
    "remove-markdown": "^0.5.5",
    "stylelint": "^16.9.0",
    "stylelint-order": "^6.0.4",
    "w3c-html-validator": "^1.8.2"
  },
  "dependencies": {
    "netlify-plugin-cache": "^1.0.3"
  }
}
